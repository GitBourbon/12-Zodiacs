<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView

        android:id="@+id/img_loading_screen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/description_loading_screen"
        android:src="@drawable/main_background" />

    <TextView
        android:id="@+id/txt_loading_screen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/img_loading_screen"
        android:layout_marginBottom="6dp"
        android:gravity="center"
        android:text="@string/txt_loading_screen"
        android:textSize="24sp"
        android:textStyle="italic" />
</RelativeLayout>